@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Food Provider Assignee Create";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Food Provider Assignee Create</a></li>
    </ol>
</div>
<!-- PAGE-HEADER END -->

<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Food Provider Assignee</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Bed No</label>
                                <select multiple="multiple" class="multi-select" id="Bedid" name="Bedid">
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label">Supervisor Name</label>
                                <select type="text" class="form-control" id="supervisorname"></select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label">Food Provider Name</label>
                                <select type="text" class="form-control" id="FPname"></select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" id="btnupdate" class="btn btn-radius btn-success">Assignee</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>


        $("#btnupdate").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {
                var model = {
                    dietMasterId: selectedbed,
                    supervisorId: parseInt($("#supervisorname").val()),
                    foodProviderLoginId: parseInt($("#FPname").val()),
                }
                console.log(JSON.stringify(model));
                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/DIETMaster/AssigneeFoodProvider",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    success: function (data, statusText, xhr) {
                        console.log(data)
                        if (xhr.status === 200) {
                            sweetAlert({
                                html: true,
                                icon: "success",
                                title: "Food Provider Assignee",
                                text: "Successfully updated!",
                                type: "success"
                            });
                        } else if (data.status === "duplicate") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else if (data.status === "error") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {

                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });
        Supervisor()
        function Supervisor(id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Supervisor/GetSupervisorList",
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push('<option value="">Select Superviser</option>');
                    for (var i = 0; i < res.data.length; i++) {
                        if (id == res.data[i].supervisorId) {
                            opt = 'selected'
                        } else {
                            opt = '';
                        }
                        options.push('<option value="' + res.data[i].supervisorId + '" ' + opt + '>' + res.data[i].supervisorName + '</option>');
                    }
                    $("#supervisorname").html(options.join(''));
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        GetFPname()
        function GetFPname(id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/FoodProviderLogin/GetFoodProviderLoginList",
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push('<option value="">Select Foodprovider</option>');
                    for (var i = 0; i < res.data.length; i++) {
                        if (id == res.data[i].foodProviderLoginId) {
                            opt = 'selected'
                        } else {
                            opt = '';
                        }
                        options.push('<option value="' + res.data[i].foodProviderLoginId + '" ' + opt + '>' + res.data[i].foodProviderName + '</option>');
                    }
                    $("#FPname").html(options.join(''));
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        BedList()
        function BedList(id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/DIETMaster/GetBednoDietList',

                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"

                },
                dataType: "json",
                success: function (data) {
                    var options = [];
                    

                    for (var i = 0; i < data['data'].length; i++) {


                        options.push('<option value="' + data['data'][i].dietMasterId + '" ' + opt + '>' + data['data'][i].bedNo + '</option>');

                    }
                    $("#Bedid").html(options.join(''));
                    $('#Bedid').change(function () {
                        selectedbed = $(this).val()
                        console.log(selectedbed);
                    }).multipleSelect({
                        width: '100%'
                    });
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }



    </script>
}