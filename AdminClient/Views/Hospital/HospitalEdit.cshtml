@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Hospital";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Hospital Edit</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Hospital/HospitalList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> Hospital List
        </a>

    </div>
</div>
<!-- PAGE-HEADER END -->
<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Hospita Edit</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Hospital Name &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="hospitaname" placeholder="Hospital Name" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">No of Floor &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="nooffloor" placeholder="No Of Floor" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Address &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <textarea class="form-control" name="example-textarea-input" rows="4" placeholder="Address.." id="address1"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Hospital Logo &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="file" class="form-control" id="logo" placeholder="No Of Floor" required>
                            </div>
                            <div class="col-md-2">
                                <div class="text-center">
                                    <img id="hospitalLogo" src="" width="90" class="rounded-circle" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Contact Person &nbsp;<span style="color: limegreen;">(Optional)</span></label>
                                <input type="text" class="form-control" id="contactperson" placeholder="Contact Person" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Contact Person No &nbsp;<span style="color: limegreen;">(Optional)</span></label>
                                <input type="text" class="form-control" id="contacpersonno" placeholder="Contact Person No" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Address 2 &nbsp;<span style="color: limegreen;">(Optional)</span></label>
                                <textarea class="form-control" name="example-textarea-input" rows="4" placeholder="Address.." id="address2"></textarea>
                            </div>

                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="button" id="btnupdate" class="btn btn-radius btn-success">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var hospitalMasterid = @ViewBag.hospitalMasterid
        loadSingleHospital()
        function loadSingleHospital() {
          $.ajax({
              type: "GET",
              url: "@apiUrl/api/Hospital/GetSingleHospitalId/" + hospitalMasterid,
              contentType: "application/json; charset=utf-8",
              headers: {
                  "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
              },
              dataType: "json",
              success: function (data) {
                  //console.log(data);
                  if (data) {
                      $('#hospitaname').val(data.hospitalName);
                      $('#address1').val(data.address1);
                      $('#address2').val(data.address2);
                      $('#contactperson').val(data.contactPerson);
                      $('#contacpersonno').val(data.contactPersonNo);
                      $('#nooffloor').val(data.floorNo);
                      $('#hospitalLogo').attr('src', data.hospitalLogo);
                     // loadParent();
                  }
                  else {
                      sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                  }
              },
              error: function (data) {
                  if (data.status == 401) {
                      window.location.replace('/Message/TokenExpire');
                  } else if (data.status == 403) {
                      window.location.replace('/Message/Unauthorize');
                  }
              }
          });
        }

        $("#btnupdate").click(function (e) {
           if (!document.getElementById("formPost").checkValidity()) {
               e.preventDefault();
           } else {
                Logo = '';
                var currentImageSrc = '';
                currentImageSrc = $('#hospitalLogo').attr('src');

                Logo = '';
                var Image = document.getElementById('logo').files.length;
                if (Image > 0) {
                    uploadLogo();
                }
               var model = {
                   hospitalMasterid: hospitalMasterid,
                   hospitalName: $.trim($("#hospitaname").val()),
                   address1: $.trim($("#address1").val()),
                   address2: $.trim($("#address2").val()),
                   contactPerson: $.trim($("#contactperson").val()),
                   contactPersonNo: $.trim($("#contacpersonno").val()),
                   floorNo: $.trim($("#nooffloor").val()),
                   hospitalLogo: Logo,
                   updatedBy:@Context.Session.GetInt32("UserId"),
               }
               console.log(model)
               $.ajax({
                   type: "POST",
                   url: "@apiUrl/api/Hospital/UpdateHospital",
                   data: JSON.stringify(model),
                   contentType: "application/json; charset=utf-8",
                   headers: {
                       "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                   },

                   success: function (data, statusText, xhr) {
                       console.log(data)
                       if (xhr.status === 200) {
                           $('#hospital').DataTable().ajax.reload(null, false);
                           sweetAlert({
                               html: true,
                               icon: "success",
                               title: "hospital",
                               text: "Successfully updated!",
                               type: "success"
                           });
                       } else if (data.status === "duplicate") {
                           sweetAlert("Validation Alert!", data.responseMsg, "warning");
                       } else if (data.status === "error") {
                           sweetAlert("Validation Alert!", data.responseMsg, "warning");
                       } else {
                           sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                       }
                   },
                   error: function (data) {
                       console.log(data);
                       if (data.status == 401) {
                           window.location.replace('/Message/TokenExpire');
                       } else if (data.status == 403) {
                           window.location.replace('/Message/Unauthorize');
                       } else if (data.status == 400) {
                           sweetAlert("Validation Alert!", "Please check input data!", "warning");
                       }
                   }
               });
           }
        });

        function uploadLogo() {
            var totalFiles = document.getElementById('logo').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('logo').files;
                formData.append("file", files[0]);
                $.ajax(
                    {
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",
                        success: function (data) {
                            Logo = data;
                            $('#hospitalLogo').attr('src', Logo);
                            resetInputFile('#userModal');
                        },
                        error: function (data) {
                            window.location.replace('/Message/SessionExpire');
                        }
                    }
                );
            }
        }
    </script>
}