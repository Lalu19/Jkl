@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Bed";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<style>
    .badge-primary {
        color: #fff;
        background: #0b6ba3;
        font-size: medium;
        margin-bottom: 0px;
    }
</style>

<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Bed</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bed List</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Bed/SuperAdminBedCreate" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span>Bed Create
        </a>

    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Bed List</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="bed" class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline" style="width:100%">
                        <thead>
                            <tr>
                                <th>Bed No</th>
                                <th>Hospital</th>
                                <th>No of Floor</th>
                                <th>Floo Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        loadBed()
        function loadBed() {
            var table = $('#bed').DataTable();
            table.destroy();
            table = $('#bed').dataTable({
                "paginationType": "full_numbers",
                "dom": 'Bfrtip',
                "buttons": ['copy', 'csv', 'excel', 'pdf', 'print'],
                "searching": true,
                "paging": true,
                "sort": true,
                "info": true,
                "ajax": {
                    "url": '@apiUrl/api/Bed/GetBedList',
                    "type": "GET",
                    "dataType": "json",
                    "headers": {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    "error": function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                },
                "order": [],
                "columns": [

                    { "data": "bedNo", "orderable": true },
                    { "data": "hospitalName", "orderable": true },
                    { "data": "floorNo", "orderable": true },
                    { "data": "floorsName", "orderable": true },
                    {
                        "render": function (data, type, row) {
                            if (row.status === 'Available') {
                                return '<p class="tag tag-purple">' + row.status + '</p>';
                            }
                            else {
                                return '<p class="tag tag-orange">' + row.status + '</p>';
                            }

                        }
                    },

                    {
                        "render": function (data, type, row) {
                            return '<a class="btn btn-sm btn-primary" href="../bed/BedEdit?bedMasterId=' + row.bedMasterId + '"><i class="fa fa-edit"></i></a>' + '&nbsp&nbsp<button class="btn btn-sm btn-danger" data-target="#delete" data-id=' + row.bedMasterId + ' data-title="Delete"><i class="fa fa-trash"></i></button>';

                        }
                    }
                ]
            });
        }

        $('#bed tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');
            swal({
                html: true,
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, confirm it!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Bed/DeleteBed/" + id + "/" + @Context.Session.GetInt32("UserId"),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status == 200) {
                            $('#bed').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                title: "Bed",
                                text: "Successfully deleted!",
                                type: "success"
                            });
                        } else if (xhr.status == 202) {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                });
            });
        });
    </script>

}